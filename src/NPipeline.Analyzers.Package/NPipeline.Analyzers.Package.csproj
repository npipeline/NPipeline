<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <IsPackable>true</IsPackable>
        <RootNamespace>NPipeline.Analyzers.Package</RootNamespace>

        <!-- Package Configuration -->
        <PackageId>NPipeline.Analyzers</PackageId>
        <PackageVersion>0.1.0</PackageVersion>
        <Title>NPipeline Analyzers</Title>
        <Description>NPipeline analyzers and code fixes for detecting and resolving common pipeline configuration issues</Description>
        <PackageTags>analyzers;roslyn;npipeline;codefixes;diagnostics</PackageTags>
        <Authors>NPipeline Team</Authors>
        <Copyright>Copyright Â© NPipeline Team</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageProjectUrl>https://github.com/npipeline/NPipeline</PackageProjectUrl>
        <RepositoryUrl>https://github.com/npipeline/NPipeline</RepositoryUrl>
        <RepositoryType>git</RepositoryType>

        <!-- Analyzer Configuration -->
        <DevelopmentDependency>true</DevelopmentDependency>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
        <!-- Suppress release tracking requirement as this is an internal analyzer -->
        <NoWarn>$(NoWarn);RS2008</NoWarn>
    </PropertyGroup>

    <PropertyGroup>
        <WarningsNotAsErrors>$(WarningsNotAsErrors);CS1591</WarningsNotAsErrors>
    </PropertyGroup>

    <!-- Project references for analyzer and code fixes -->
    <ItemGroup>
        <ProjectReference Include="..\NPipeline.Roslyn.Analyzers\NPipeline.Roslyn.Analyzers.csproj" PrivateAssets="all"/>
        <ProjectReference Include="..\NPipeline.CodeFixes\NPipeline.CodeFixes.csproj" PrivateAssets="all"/>
    </ItemGroup>

    <!-- Include README in package -->
    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

    <!-- Get analyzer assemblies from referenced projects -->
    <Target Name="IncludeAnalyzersInPackage" DependsOnTargets="ResolveReferences">
        <ItemGroup>
            <!-- Include analyzer DLL -->
            <TfmSpecificPackageFile Include="..\NPipeline.Roslyn.Analyzers\bin\$(Configuration)\netstandard2.0\NPipeline.Roslyn.Analyzers.dll">
                <PackagePath>analyzers\dotnet\cs</PackagePath>
            </TfmSpecificPackageFile>
            <!-- Include code fixes DLL -->
            <TfmSpecificPackageFile Include="..\NPipeline.CodeFixes\bin\$(Configuration)\netstandard2.0\NPipeline.CodeFixes.dll">
                <PackagePath>analyzers\dotnet\cs</PackagePath>
            </TfmSpecificPackageFile>
        </ItemGroup>
    </Target>

    <!-- Ensure the target runs during pack -->
    <PropertyGroup>
        <TargetsForTfmSpecificContentInPackage>$(TargetsForTfmSpecificContentInPackage);IncludeAnalyzersInPackage</TargetsForTfmSpecificContentInPackage>
    </PropertyGroup>

</Project>
