<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <IsPackable>true</IsPackable>
        <RootNamespace>NPipeline.Analyzers.Package</RootNamespace>

        <!-- Package Configuration -->
        <PackageId>NPipeline.Analyzers</PackageId>
        <PackageVersion>0.1.0</PackageVersion>
        <Title>NPipeline Analyzers</Title>
        <Description>NPipeline analyzers and code fixes for detecting and resolving common pipeline configuration issues</Description>
        <PackageTags>analyzers;roslyn;npipeline;codefixes;diagnostics</PackageTags>
        <Authors>NPipeline Team</Authors>
        <Copyright>Copyright Â© NPipeline Team</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageProjectUrl>https://github.com/npipeline/NPipeline</PackageProjectUrl>
        <RepositoryUrl>https://github.com/npipeline/NPipeline</RepositoryUrl>
        <RepositoryType>git</RepositoryType>

        <!-- Analyzer Configuration -->
        <DevelopmentDependency>true</DevelopmentDependency>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
        <!-- Suppress release tracking requirement as this is an internal analyzer -->
        <NoWarn>$(NoWarn);RS2008</NoWarn>
    </PropertyGroup>

    <PropertyGroup>
        <WarningsNotAsErrors>$(WarningsNotAsErrors);CS1591</WarningsNotAsErrors>
    </PropertyGroup>

    <!-- Include analyzer and code fix DLLs in the package -->
    <ItemGroup>
        <None Include="..\NPipeline.Analyzers\bin\Release\netstandard2.0\NPipeline.Analyzers.dll">
            <Pack>true</Pack>
            <PackagePath>analyzers\dotnet\cs</PackagePath>
        </None>
        <None Include="..\NPipeline.CodeFixes\bin\Release\netstandard2.0\NPipeline.CodeFixes.dll">
            <Pack>true</Pack>
            <PackagePath>analyzers\dotnet\cs</PackagePath>
        </None>
        <None Include="README.md">
            <Pack>true</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <!-- Ensure referenced projects are built before packing -->
    <Target Name="BuildReferencedProjects" BeforeTargets="Pack">
        <MSBuild Projects="..\NPipeline.Analyzers\NPipeline.Analyzers.csproj" Targets="Build" Properties="Configuration=Release"/>
        <MSBuild Projects="..\NPipeline.CodeFixes\NPipeline.CodeFixes.csproj" Targets="Build" Properties="Configuration=Release"/>
    </Target>

</Project>
