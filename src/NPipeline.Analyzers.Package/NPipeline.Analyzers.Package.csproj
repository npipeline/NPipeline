<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <IsPackable>true</IsPackable>
        <RootNamespace>NPipeline.Analyzers.Package</RootNamespace>

        <!-- Package Configuration -->
        <PackageId>NPipeline.Analyzers</PackageId>
        <PackageVersion>0.1.0</PackageVersion>
        <Title>NPipeline Analyzers</Title>
        <Description>NPipeline analyzers and code fixes for detecting and resolving common pipeline configuration issues</Description>
        <PackageTags>analyzers;roslyn;npipeline;codefixes;diagnostics</PackageTags>
        <Authors>NPipeline Team</Authors>
        <Copyright>Copyright Â© NPipeline Team</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageProjectUrl>https://github.com/npipeline/NPipeline</PackageProjectUrl>
        <RepositoryUrl>https://github.com/npipeline/NPipeline</RepositoryUrl>
        <RepositoryType>git</RepositoryType>

        <!-- Analyzer Configuration -->
        <DevelopmentDependency>true</DevelopmentDependency>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
        <!-- Suppress release tracking requirement as this is an internal analyzer -->
        <NoWarn>$(NoWarn);RS2008</NoWarn>
    </PropertyGroup>

    <PropertyGroup>
        <WarningsNotAsErrors>$(WarningsNotAsErrors);CS1591</WarningsNotAsErrors>
    </PropertyGroup>

    <!-- Project references for analyzer and code fixes -->
    <ItemGroup>
        <ProjectReference Include="..\NPipeline.Roslyn.Analyzers\NPipeline.Roslyn.Analyzers.csproj" PrivateAssets="all" ReferenceOutputAssembly="false" />
        <ProjectReference Include="..\NPipeline.CodeFixes\NPipeline.CodeFixes.csproj" PrivateAssets="all" ReferenceOutputAssembly="false" />
    </ItemGroup>

    <!-- Include README in package -->
    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

    <!-- Add analyzer DLLs to package during build -->
    <Target Name="AddAnalyzersToPackage" BeforeTargets="GenerateNuspec" DependsOnTargets="ResolveProjectReferences">
        <ItemGroup>
            <None Include="$(MSBuildThisFileDirectory)..\NPipeline.Roslyn.Analyzers\bin\$(Configuration)\netstandard2.0\NPipeline.Roslyn.Analyzers.dll" Pack="true" PackagePath="analyzers\dotnet\cs" Visible="false" />
            <None Include="$(MSBuildThisFileDirectory)..\NPipeline.CodeFixes\bin\$(Configuration)\netstandard2.0\NPipeline.CodeFixes.dll" Pack="true" PackagePath="analyzers\dotnet\cs" Visible="false" />
        </ItemGroup>
        <Message Importance="high" Text="Adding analyzer files to package" />
        <Message Importance="high" Text="Analyzer path: $(MSBuildThisFileDirectory)..\NPipeline.Roslyn.Analyzers\bin\$(Configuration)\netstandard2.0\" />
    </Target>

</Project>
