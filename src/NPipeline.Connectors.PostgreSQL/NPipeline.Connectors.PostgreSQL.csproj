<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>

        <!-- NuGet Packaging Metadata -->
        <PackageId>NPipeline.Connectors.PostgreSQL</PackageId>
        <Description>PostgreSQL source and sink nodes for NPipeline using Npgsql - read from and write to PostgreSQL databases with configurable options</Description>
        <PackageTags>npipeline;postgresql;postgres;npgsql;connectors;database</PackageTags>
        <Authors>NPipeline contributors</Authors>
        <RepositoryUrl>https://github.com/NPipeline/NPipeline.git</RepositoryUrl>
        <PackageProjectUrl>https://github.com/NPipeline/NPipeline</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <PackageIcon>icon.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <PropertyGroup>
        <WarningsNotAsErrors>$(WarningsNotAsErrors);CS1591</WarningsNotAsErrors>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\NPipeline.Connectors\NPipeline.Connectors.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <Compile Remove="PostgresSourceNode.cs" />
        <Compile Remove="PostgresSinkNode.cs" />
        <Compile Remove="Nodes/PostgresWriteStrategy.cs" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Npgsql" Version="9.0.2"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\icon.png" Pack="true" PackagePath="\"/>
        <None Include="README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="NPipeline.Connectors.PostgreSQL.Tests"/>
    </ItemGroup>

</Project>
