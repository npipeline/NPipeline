<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        
        <!-- NuGet Packaging Metadata -->
        <PackageId>NPipeline.Extensions.Testing</PackageId>
        <Description>Testing utilities for NPipeline including in-memory nodes, test harness, and assertion helpers</Description>
        <PackageTags>npipeline;testing;unit-testing;test-utilities;extensions</PackageTags>
        <Authors>NPipeline contributors</Authors>
        <RepositoryUrl>https://github.com/NPipeline/NPipeline.git</RepositoryUrl>
        <PackageProjectUrl>https://github.com/NPipeline/NPipeline</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\NPipeline\NPipeline.csproj"/>
    </ItemGroup>

</Project>
